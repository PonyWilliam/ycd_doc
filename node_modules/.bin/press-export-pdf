#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@condorhero/vuepress-plugin-export-pdf-v2/bin/press-export-pdf.mjs" "$@"
else 
  exec node  "$basedir/../@condorhero/vuepress-plugin-export-pdf-v2/bin/press-export-pdf.mjs" "$@"
fi
